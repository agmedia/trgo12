{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/livewire-starter-kit",
    "type": "project",
    "description": "Laravel 12 webshop (admin-first) modeled on top-tim.",
    "keywords": ["laravel", "framework", "webshop", "admin"],
    "license": "MIT",

    "require": {
        "php": "^8.4",
        "cviebrock/eloquent-sluggable": "^12.0",
        "darryldecode/cart": "^4.2",
        "intervention/image-laravel": "^1.5",
        "kalnoy/nestedset": "^6.0.6",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1",
        "livewire/flux": "^2.1",
        "livewire/livewire": "^3.6",
        "livewire/volt": "^1.7",
        "mcamara/laravel-localization": "^2.0 || ^2.3",
        "phpoffice/phpspreadsheet": "^5.0",
        "silber/bouncer": "^1.0",
        "spatie/laravel-medialibrary": "^11.12.5",
        "spatie/laravel-permission": "^6.0"
    },

    "require-dev": {
        "fakerphp/faker": "^1.23",
        "mockery/mockery": "^1.6",

        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",

        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",

        "phpstan/phpstan": "^2.1",
        "nunomaduro/larastan": "^3.0",

        "nunomaduro/collision": "^8.0",
        "laravel/sail": "^1.41"
    },

    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers/helpers_functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],

        "lint": "pint --test",
        "fix": "pint",
        "stan": "phpstan analyse --memory-limit=1G",
        "test": "pest"
    },

    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },

    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },

    "minimum-stability": "stable",
    "prefer-stable": true
}
